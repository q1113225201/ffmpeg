<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sjl.ffmpegonelib.FFmpegBaseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="configuration"
            android:id="@+id/btnConfiguration"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="urlprotocolinfo"
            android:id="@+id/btnUrlProtocolInfo"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="avformatinfo"
            android:id="@+id/btnAvformatInfo"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="avcodecinfo"
            android:id="@+id/btnAvcodecInfo"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="avfilterinfo"
            android:id="@+id/btnAvfilterInfo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv"/>
    </LinearLayout>
</ScrollView>
